<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionMenuTextColor">@color/colorPrimary</item>
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Nav Header -->
    <style name="NavHeaderInfo">
        <item name="android:layout_marginStart">16dp</item>
    </style>
    
    <!-- View Holder Message Chat-->
    <style name="MessageViewHolderCard">
        <item name="cardBackgroundColor">@color/colorAccent</item>
        <item name="android:layout_marginBottom">@dimen/view_holder_message_text_margin_top_bottom</item>
        <item name="android:layout_marginTop">@dimen/view_holder_message_text_margin_top_bottom</item>
        <item name="android:layout_marginStart">@dimen/view_holder_message_text_margin_left_right</item>
        <item name="android:layout_marginEnd">@dimen/view_holder_message_text_margin_left_right</item>
        <item name="cardCornerRadius">4dp</item>
    </style>

    <style name="MessageViewHolderCard.LocalMessage">
        <item name="cardBackgroundColor">@color/localMessageBackground</item>
    </style>

    <style name="MessageViewHolderLinearLayout">
        <item name="android:paddingTop">@dimen/view_holder_message_text_ll_margin_general</item>
        <item name="android:paddingStart">@dimen/view_holder_message_text_ll_margin_general</item>
        <item name="android:paddingEnd">@dimen/view_holder_message_text_ll_margin_general</item>
        <item name="android:paddingBottom">@dimen/view_holder_message_text_ll_margin_bottom</item>
    </style>

    <style name="MessageViewHolderMessageText">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">@dimen/font_size_chat_message</item>
    </style>

    <style name="MessageViewHolderTime">
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/messageTime</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <!-- Chat layout -->
    <style name="ChatMessagesRecycler">
        <item name="android:paddingBottom">@dimen/view_holder_message_text_margin_top_bottom</item>
        <item name="android:paddingRight">4dp</item>
    </style>
    
    <style name="ChatTextField">
        <item name="android:background">@drawable/chat_text_field</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="ButtonSendMessage">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="fabCustomSize">48dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>


    <!-- User ViewHolder -->
    <style name="UserInfoCard">
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
    </style>

    <style name="UserViewHolderLinearLayout">
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="UserPictureViewHolder">
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_width">64dp</item>
        <item name="tint">@color/appBarIcon</item>
    </style>

    <style name="UserInfoLinearLayoutViewHolder">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="UserPictureCardViewHolder">
        <item name="cardCornerRadius">@dimen/card_user_picture_radius</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/user_picture_background</item>
    </style>

    <style name="UserNameViewHolder">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="LastMessage">
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Users Fragment -->
    <style name="UsersFragmentLinearLayoutNoUsers">
        <item name="android:gravity">center</item>
    </style>

    <style name="UsersFragmentTextNoUsers">
        <item name="android:layout_margin">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">32dp</item>
    </style>

    <!-- Profile Edit -->
    <style name="ProfileEditLinearLayout">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">32dp</item>
        <item name="android:paddingBottom">32dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="ProfileEditCardViewProfilePicture">
        <item name="cardCornerRadius">16dp</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:layout_height">168dp</item>
        <item name="android:layout_width">168dp</item>

    </style>

    <style name="ProfileEditCardViewSection">
        <item name="cardCornerRadius">8dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="cardElevation">1dp</item>
    </style>

    <style name="ProfileEditLinearLayoutSection">
        <item name="android:padding">16dp</item>
    </style>

    <style name="ProfileEditIconSection">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="ProfileEditCardSectionTitle">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="ProfileEditEditText">
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- View Holder String -->
    <style name="StringViewHolderLinearLayout">
        <item name="android:padding">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <!-- Setup Wizard -->
    <style name="SetupWizardActivity" parent="Theme.AppCompat.DayNight.NoActionBar">
    </style>

    <style name="SetupWizardSectionTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="SetupWizardIcon">
        <item name="android:layout_marginTop">@dimen/setup_wizard_icon_margin_vertical</item>
        <item name="android:layout_width">@dimen/setup_wizard_icon_size</item>
        <item name="android:layout_height">@dimen/setup_wizard_icon_size</item>
        <item name="tint">@color/primaryIcon</item>
    </style>
    <style name="SetupWizardFormWrapper">
        <item name="android:layout_marginTop">@dimen/setup_wizard_form_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/setup_wizard_form_margin_vertical</item>
        <item name="android:layout_marginLeft">@dimen/setup_wizard_form_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/setup_wizard_form_margin_horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="SetupWizardButton">
        <item name="android:layout_width">@dimen/setup_wizard_button_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/setup_wizard_button_margin_vertical</item>
    </style>

    <style name="SetupWizardButton.Primary">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/primaryButtonColor</item>
    </style>

    <style name="SetupWizardButton.Secondary">
        <item name="android:textColor">@color/primaryButtonColor</item>
        <item name="android:layout_marginBottom">@dimen/setup_wizard_button_margin_vertical_secondary</item>
    </style>

    <style name="SetupWizardTextEditWrapper">
        <item name="android:layout_marginBottom">@dimen/setup_wizard_edit_text_wrapper_margin_vertical</item>
    </style>

    <style name="SetupWizardConnectionDrawable">
        <item name="android:layout_height">@dimen/setup_wizard_connection_drawable_size</item>
        <item name="android:layout_width">@dimen/setup_wizard_connection_drawable_size</item>
        <item name="tint">@color/primaryIcon</item>
        <item name="android:layout_marginBottom">@dimen/setup_wizard_connection_drawable_margin_vertical</item>
    </style>


</resources>