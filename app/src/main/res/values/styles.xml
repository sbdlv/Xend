<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionMenuTextColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Nav Header -->
    <style name="NavHeaderInfo">
        <item name="android:layout_marginStart">16dp</item>
    </style>
    
    <!-- View Holder Message Chat-->
    <style name="MessageViewHolderCard">
        <item name="cardBackgroundColor">@color/colorAccent</item>
        <item name="android:layout_marginBottom">@dimen/view_holder_message_text_margin_top_bottom</item>
        <item name="android:layout_marginTop">@dimen/view_holder_message_text_margin_top_bottom</item>
        <item name="android:layout_marginStart">@dimen/view_holder_message_text_margin_left_right</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <style name="MessageViewHolderLinearLayout">
        <item name="android:padding">8dp</item>
    </style>

    <style name="MessageViewHolderMessageText">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">@dimen/font_size_chat_message</item>
    </style>

    <!-- Chat layout -->
    <style name="ChatMessagesRecycler">
        <item name="android:paddingTop">@dimen/view_holder_message_text_margin_top_bottom</item>
        <item name="android:paddingBottom">@dimen/view_holder_message_text_margin_top_bottom</item>
    </style>
    
    <style name="ChatTextField">
        <item name="android:background">@drawable/chat_text_field</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="ButtonSendMessage">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="fabCustomSize">48dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>


    <!-- User ViewHolder -->
    <style name="UserInfoCard">
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
    </style>

    <style name="UserViewHolderLinearLayout">
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="UserPictureViewHolder">
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_width">64dp</item>
    </style>

    <style name="UserInfoLinearLayoutViewHolder">
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="UserPictureCardViewHolder">
        <item name="cardCornerRadius">32dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="UserNameViewHolder">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">2dp</item>

    </style>

    <!-- Users Fragment -->
    <style name="UsersFragmentLinearLayoutNoUsers">
        <item name="android:gravity">center</item>
    </style>

    <style name="UsersFragmentTextNoUsers">
        <item name="android:layout_margin">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">32dp</item>
    </style>

    <!-- Profile Edit -->
    <style name="ProfileEditLinearLayout">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">32dp</item>
        <item name="android:paddingBottom">32dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="ProfileEditCardViewPorfilePicture">
        <item name="cardCornerRadius">16dp</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:layout_height">168dp</item>
        <item name="android:layout_width">168dp</item>

    </style>

    <style name="ProfileEditCardViewSection">
        <item name="cardCornerRadius">8dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="cardElevation">1dp</item>
    </style>

    <style name="ProfileEditLinearLayoutSection">
        <item name="android:padding">16dp</item>
    </style>

    <style name="ProfileEditIconSection">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>

        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="ProfileEditCardSectionTitle">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <!-- View Holder String -->
    <style name="StringViewHolderLinearLayout">
        <item name="android:padding">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

</resources>