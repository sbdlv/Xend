<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvDate"
        style="@style/MessageViewHolderCardDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:text="01/01/2021" />

    <androidx.cardview.widget.CardView
        style="@style/MessageViewHolderCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            style="@style/MessageViewHolderLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMessageText"
                style="@style/MessageViewHolderMessageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Hello buddy!" />

            <TextView
                android:id="@+id/tvMessageTime"
                style="@style/MessageViewHolderTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="00:00" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>